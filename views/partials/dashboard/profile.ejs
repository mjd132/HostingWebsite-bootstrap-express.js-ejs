<div
  class="d-flex flex-column justify-content-between flex-wrap flex-md-nowrap pt-3 pb-2 mb-3 border-bottom"
>
  <h5>Edit Profile</h5>
  <div class="align-self-center w-75 m-4">
    <form action="/dashboard/profile" method="post">
      <input
        class="form-control m-1 p-2"
        type="text"
        name="name"
        placeholder="Name"
        value="<%= user.name %>"
      />
      <input
        class="form-control mb-4 m-1 p-2"
        type="email"
        name="email"
        placeholder="example@gmail.com"
        value="<%= user.email %>"
      />

      <p class="fs-5">Change password</p>
      <div class="align-self-center w-75 m-4">
        <input
          class="form-control fw-bold m-2 p-2"
          type="password"
          name="oldPass"
          placeholder="Old password"
        />
        <input
          class="form-control fw-bold m-2 p-2"
          type="password"
          name="pass"
          placeholder="New password"
        />
        <input
          class="form-control fw-bold m-2 p-2"
          type="password"
          name="rePass"
          placeholder="Repeat new password"
        />
      </div>
      <% if (typeof error !== 'undefined') { %>
      <p class="text-danger"><%= error %></p>
      <% } %>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>
</div>
