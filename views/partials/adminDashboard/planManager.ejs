      <div class="form-group row p-2">
        <label for="inputPassword" class="col-sm-2 col-form-label">CPU :</label>
        <div class="col-sm-10">
          <input
            type="range"
            id="cpuVPS"
            name="cpuVPS"
            min="1"
            max="32"
            value="16  "
            oninput="updateOutput(this.value)"
          />
          <output
            class="border border-primary text-primary border-1 rounded-circle p-2 m-1 fw-bold"
            id="outputcpuVPS"
          >
            16
