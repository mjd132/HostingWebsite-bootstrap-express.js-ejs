        <option selected value="vps">vps</option>
        <option value="host">host</option>
      </select>
    </div>

    <button type="submit">ADD</button>
  </form>
</div>

<script>
  function updateOutput(value) {
    document.getElementById("outputcpuVPS").textContent = value;
  }
</script>
