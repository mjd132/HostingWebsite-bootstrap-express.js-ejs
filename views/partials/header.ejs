<header
  class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom"
>
  <div class="col-md-auto mb-2 mb-md-0">
    <a
      href="/"
      class="d-inline-flex fs-3 link-body-emphasis text-decoration-none"
    >
      IRANSERVER
    </a>
  </div>

  <ul
    class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0 me-md-5"
  >
    <li><a href="/" class="nav-link px-2">Home</a></li>
    <li><a href="#" class="nav-link px-2">Features</a></li>
    <li>
      <a href="price" class="nav-link px-2">Pricing</a>
    </li>
    <li><a href="#" class="nav-link px-2">FAQs</a></li>
    <li><a href="#" class="nav-link px-2">About</a></li>
  </ul>

  <div class="text-end">
    <% if(locals.user){%>
    <div class="dropdown text-end w-auto">
      <a
        href="#"
        class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        <p class="fs-5 d-inline me-1">Hi, <%=user.name%></p></a
      >

      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/dashboard">Dashboard</a></li>
        <li><a class="dropdown-item" href="/dashboard/profile">Profile</a></li>

        <li>
          <a class="dropdown-item text-white bg-danger" href="/logout"
            >Sign out</a
          >
        </li>
      </ul>
    </div>
    <%} else { %>

    <a href="/login"
      ><button type="button" class="btn btn-outline-primary me-2">
        Login
      </button></a
    >
    <a href="/signup"
      ><button type="button" class="btn btn-primary">Sign-up</button></a
    >

    <%}%>
  </div>
</header>
